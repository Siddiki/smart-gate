function sending_alert() {
  
  // put the id and access token of your spark core here! 
  // remember to change it later on.
  var response = UrlFetchApp.fetch("https://api.spark.io/v1/devices/YOUR-DEVICE-ID/result?access_token=YOUR-ACCESS-TOKEN");
  
  var json = response.getContentText();
  var data = JSON.parse(json);
  var alert = unescape(data.alert);
  
  // Get the email address of the active user 
  var email = Session.getActiveUser().getEmail();
  var subject = 'alert from small baby gate';
  var body = 'Your baby is leaving the safe zone';
  
  if(alert == 1){
  // Send yourself an email or an "alert".
  GmailApp.sendEmail(email, subject, body);
  }
  
}
