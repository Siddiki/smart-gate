//int D0=s_0; //powersupply for lower sensor
//int D1=s_1; //powersupply for higher sensor


int alert = 0;
int dist_0 = 0;
int dist_1 = 0;

//int active(String command);

void setup() {
    
    //spark.function("power",active)
    
    pinMode(A0,INPUT);    //lower sensor
    pinMode(A1,INPUT);    //higher sensor
    
    //pinMode(s_1,OUTPUT);
    //pinMode(s_2,OUTPUT);
    
    Spark.variable("alert",&alert,INT);
    
}

void loop() {
//    int dist_0 = 0;  //value read from sensor
//    int dist_1 = 0;

    dist_0 = analogRead(A0);
    dist_1 = analogRead(A1);
    
    //actual value needed be tested
    if( dist_0 > 150 && dist_1 < 150){
        alert = 1;
    }
    else{
        alert = 0;
    }
}

